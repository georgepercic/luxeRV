{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <div class="card bg-white">
        <div class="card-header">
            Employees
        </div>
        <div class="card-block">
            <table class="table table-bordered table-condensed datatable m-b-0">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Dob</th>
                    <th>Ssn</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip</th>
                    <th>Street</th>
                    <th>Suite No.</th>
                    <th>Country</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for employee in employees %}
                    <tr>
                        <td><a href="{{ path('employees_show', { 'id': employee.id }) }}">{{ employee.id }}</a></td>
                        <td>{{ employee.firstName }}</td>
                        <td>{{ employee.lastName }}</td>
                        <td>{% if employee.dob %}{{ employee.dob|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ employee.ssn }}</td>
                        <td>{{ employee.addressCity }}</td>
                        <td>{{ employee.addressState }}</td>
                        <td>{{ employee.addressZip }}</td>
                        <td>{{ employee.addressStreet }}</td>
                        <td>{{ employee.addressSuiteNo }}</td>
                        <td>{{ employee.addressCountry }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('employees_show', { 'id': employee.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('employees_edit', { 'id': employee.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('employees_new') }}">Create a new employee</a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <!-- page scripts -->
    <script src="{{ asset('assets/vendor/datatables/media/js/jquery.dataTables.js') }}"></script>
    <!-- end page scripts -->
    <!-- initialize page scripts -->
    <script src="{{ asset('assets/vendor/datatables/media/js/dataTables.bootstrap.js') }}"></script>
    <script type="text/javascript">
        $('.datatable').dataTable();
    </script>
    <!-- end initialize page scripts -->

{% endblock %}
