{% extends 'AppBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css') }}">

    <style>
        .datetimepicker {
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card bg-white">
        <div class="card-header">
            Customer creation
        </div>
        <div class="card-block">
            <div class="row m-a-0">
                <div class="col-lg-12">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    <div class="form-group">
                        {{ form_label(form.name, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.name, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Name"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Email address"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.phone, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.phone, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Phone"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.additionalPhone, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.additionalPhone, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Additional Phone"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.whatsapp, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.whatsapp, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Whatsapp"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.skype, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.skype, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Skype"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.billing, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.billing, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Billing"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.driverLicense, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.driverLicense, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Driver licence"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.drivingLicenceExpirationDate, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="input-group" id="exp-date-datetimepicker">
                            {{ form_widget(form.drivingLicenceExpirationDate, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Driving Licence Expiration Date"} }) }}
                            <span class="input-group-addon datetimepicker">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.passport, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.passport, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Passport"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.insurance, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.insurance, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Insurance"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <input type="submit" class="btn btn-primary" value="Create" />
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <ul>
        <li>
            <a href="{{ path('customer_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/vendor/moment/moment.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/js/transition.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/js/collapse.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js') }}"></script>

    <script>
        $(document).ready(function () {
            $('#exp-date-datetimepicker').datetimepicker({
                format: 'YYYY-MM-DD HH:mm'
            });
        });
    </script>
{% endblock %}