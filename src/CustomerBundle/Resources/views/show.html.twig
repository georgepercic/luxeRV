{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <h1>Customer</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Aditionalphone</th>
                <td>{{ customer.aditionalPhone }}</td>
            </tr>
            <tr>
                <th>Whatsapp</th>
                <td>{{ customer.whatsapp }}</td>
            </tr>
            <tr>
                <th>Skype</th>
                <td>{{ customer.skype }}</td>
            </tr>
            <tr>
                <th>Billing</th>
                <td>{{ customer.billing }}</td>
            </tr>
            <tr>
                <th>Deliveryaddress</th>
                <td>{{ customer.deliveryAddress }}</td>
            </tr>
            <tr>
                <th>Pickupaddress</th>
                <td>{{ customer.pickUpAddress }}</td>
            </tr>
            <tr>
                <th>Driverlicense</th>
                <td>{{ customer.driverLicense }}</td>
            </tr>
            <tr>
                <th>Passport</th>
                <td>{{ customer.passport }}</td>
            </tr>
            <tr>
                <th>Insurance</th>
                <td>{{ customer.insurance }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('customer_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('customer_edit', { 'id': customer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
