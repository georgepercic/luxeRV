                            {{ form_widget(edit_form.passport, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Passport"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.insurance, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.insurance, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Insurance"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <input type="submit" class="btn btn-primary" value="Save Edit" />
                        </div>
                    </div>

                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
    <ul>
        <li>
            <a href="{{ path('customer_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
