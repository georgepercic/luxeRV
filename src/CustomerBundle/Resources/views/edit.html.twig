                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.pickUpAddress, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.pickUpAddress, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Pickup Address"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.driverLicense, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
