                        {{ form_label(edit_form.name, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Name"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.email, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.email, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Email address"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.phone, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.phone, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Phone"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.aditionalPhone, null, {
