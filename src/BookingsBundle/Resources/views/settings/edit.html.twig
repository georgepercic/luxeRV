{% extends 'base.html.twig' %}

{% block body %}
    <div class="card bg-white">
        <div class="card-header">
            Settings edit
        </div>
        <div class="card-block">
            <div class="row m-a-0">
                <div class="col-lg-12">
                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
                    <div class="form-group">
                        {{ form_label(edit_form.dailyMiles, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.dailyMiles, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Daily Miles"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.defaultPickUpTime, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.defaultPickUpTime, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Default Pickup Time"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.defaultDropOffTime, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.defaultDropOffTime, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Default Drop Off Time"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.defaultMinRentDays, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.defaultMinRentDays, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Default Minimum Rent Days"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.taxRate, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.taxRate, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Tax Rate"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.depositAmountRate, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.depositAmountRate, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Deposit Amount"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <input type="submit" class="btn btn-primary" value="Save Edit" />
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('settings_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
