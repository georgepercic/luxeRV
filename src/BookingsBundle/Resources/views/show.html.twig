{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <h1>Booking</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Pickupdate</th>
                <td>{% if booking.pickUpDate %}{{ booking.pickUpDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dropoffdate</th>
                <td>{% if booking.dropOffDate %}{{ booking.dropOffDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Customerid</th>
                <td>{{ booking.customerId }}</td>
            </tr>
            <tr>
                <th>Vehicleid</th>
                <td>{{ booking.vehicleId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bookings_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bookings_edit', { 'id': booking.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
