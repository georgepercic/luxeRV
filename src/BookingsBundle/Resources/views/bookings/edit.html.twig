{% extends 'AppBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/multiselect/css/multi-select.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/ui-select/dist/select.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/select2/dist/css/select2.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/selectize/dist/css/selectize.css') }}">
    <style>
        .datetimepicker {
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card bg-white">
        <div class="card-header">
            Booking edit
        </div>
        <div class="card-block">

            <div class="row">
                <div class="col-md-1"><a href="{{  path('booking_operations') }}" class="btn btn-primary">Dashboard</a></div>
                <div class="col-md-1"><a href="{{  path('bookings_index') }}" class="btn btn-primary">Bookings List</a></div>
                <div class="col-md-1">
                    {{ form_start(delete_form, {'attr' : {'class':'remove-booking-form'}}) }}
                        <input type="submit" class="btn btn-danger" value="Remove Booking">
                    {{ form_end(delete_form) }}
                </div>
            </div><br />

            <div class="row m-a-0">
                <div class="col-lg-12">
                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
                    <div class="form-group">
                        {{ form_label(edit_form.pickUpDate, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            <div class="input-group" id="pick-up-datetimepicker">
                                {{ form_widget(edit_form.pickUpDate, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Delivery Date"} }) }}
                                <span class="input-group-addon datetimepicker">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.dropOffDate, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            <div class="input-group" id="drop-off-datetimepicker">
                                {{ form_widget(edit_form.dropOffDate, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Return Date"} }) }}
                                <span class="input-group-addon datetimepicker">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.pickUpLocation, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.pickUpLocation, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Delivery Location"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.dropOffLocation, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.dropOffLocation, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Return Location"} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.servicesRequested, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.servicesRequested, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Services Requested"} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.specialRequirements, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.specialRequirements, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Special Requirements"} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.bookingStatus, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.bookingStatus, { 'attr': {'class': 'select2', 'style': 'width: 100%;'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.customer, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.customer, { 'attr': {'class': 'select2', 'data-placeholder': "Customer", 'style': 'width: 100%;'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.vehicle, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.vehicle, { 'attr': {'class': 'select2', 'data-placeholder': "Vehicle", 'style': 'width: 100%;'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <input type="submit" class="btn btn-primary" value="Save Edit"/>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/vendor/moment/moment.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/js/transition.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/js/collapse.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/select2/dist/js/select2.js') }}"></script>
    <script src="{{ asset('assets/vendor/selectize/dist/js/standalone/selectize.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/multiselect/js/jquery.multi-select.js') }}"></script>

    <script>
        $(document).ready(function () {

            $('#pick-up-datetimepicker').datetimepicker({
                format: "MM/DD/YYYY HH:mm"
            });

            $('#drop-off-datetimepicker').datetimepicker({
                format: "MM/DD/YYYY HH:mm"
            });

            $('.select2').select2();

            $('.remove-booking-form').on('submit', function() {
                var href = $(this).attr('href');

                var confirmRemove = confirm('Are you sure you want to completely remove this booking and other dependencies?');

                if (confirmRemove) {
                    return window.location = href;
                }

                return false;
            });
        });
    </script>
{% endblock %}
