{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <div class="card bg-white">
        <div class="card-header">
            Vehicle creation
        </div>
        <div class="card-block">
            <div class="row m-a-0">
                <div class="col-lg-12">
                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
                    <div class="form-group">
                        {{ form_label(edit_form.vin, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.vin, { 'attr': {'class': 'form-control input-lg', 'placeholder': "VIN"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.brand, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.brand, { 'attr': {'class': 'form-control', 'placeholder': "Brand"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.model, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.model, { 'attr': {'class': 'form-control', 'placeholder': "Model"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.productionYear, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.productionYear, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Production Year"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.mileage, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.mileage, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Mileage"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.color, null, {
                            'label_attr': {'class': 'col-sm-2 control-label'}
                        }) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.color, { 'attr': {'class': 'form-control input-lg', 'placeholder': "Color"} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <input type="submit" class="btn btn-primary" value="Edit" />
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('vehicles_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
